<!DOCTYPE html>
<html>
<head>
    <title>Intro Hater Test</title>
</head>
<body>
    <h2>Submit Segment</h2>
    <form id="submitForm">
        <div>
            <label>Video ID (e.g. tt0944947):</label>
            <input type="text" id="videoId" required>
        </div>
        <div>
            <label>Start (seconds):</label>
            <input type="number" id="start" required>
        </div>
        <div>
            <label>End (seconds):</label>
            <input type="number" id="end" required>
        </div>
        <div>
            <label>Category:</label>
            <select id="category">
                <option value="intro">Intro</option>
                <option value="outro">Outro</option>
            </select>
        </div>
        <button type="submit">Submit</button>
    </form>

    <h2>Get Segments</h2>
    <div>
        <input type="text" id="searchVideoId" placeholder="Enter video ID">
        <button onclick="getSegments()">Search</button>
    </div>
    <pre id="results"></pre>

    <script>
        document.getElementById('submitForm').onsubmit = async (e) => {
            e.preventDefault();
            try {
                const response = await fetch('/submit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        videoId: document.getElementById('videoId').value,
                        start: Number(document.getElementById('start').value),
                        end: Number(document.getElementById('end').value),
                        category: document.getElementById('category').value
                    })
                });
                const result = await response.json();
                alert(result.success ? 'Submitted successfully!' : 'Error: ' + result.error);
            } catch (err) {
                alert('Error: ' + err);
            }
        };

        async function getSegments() {
            try {
                const videoId = document.getElementById('searchVideoId').value;
                const response = await fetch(`/segments/${videoId}`);
                const data = await response.json();
                document.getElementById('results').textContent = 
                    JSON.stringify(data, null, 2);
            } catch (err) {
                alert('Error: ' + err);
            }
        }
    </script>
</body>
</html> 
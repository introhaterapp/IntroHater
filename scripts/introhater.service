[Unit]
Description=IntroHater Application
After=network.target mongod.service
Requires=mongod.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/app
ExecStart=/usr/bin/node server.js
Restart=on-failure
Environment=NODE_ENV=production
Environment=PORT=80
Environment=MONGODB_URI=mongodb://introhater_admin:REDACTED@localhost:27017/introHater?authSource=admin

[Install]
WantedBy=multi-user.target